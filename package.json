{
  "name": "bridge-x-server",
  "version": "0.8.0",
  "description": "Bridge-X API server",
  "author": "GLORY LTD.",
  "license": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/glory-cloud-dev/bridgex-server.git"
  },
  "engines": {
    "node": ">=12.16.0 <13",
    "npm": ">=6.13.0"
  },
  "scripts": {
    "build": "run-s build:copy build:nest",
    "build:copy": "cpx \"./src/assets/**/*\" \"./dist/assets\"",
    "build:docs": "run-s build:docs:*",
    "build:docs:mqtt": "asyncapi-generator ./docs/mqtt-interface.yaml html -o ./docs/mqtt/",
    "build:docs:rest": "openapi-generator generate -i ./docs/bridge-x-server.swagger.json -o docs/rest/ -g html2",
    "build:nest": "nest build",
    "clear-autogen-files": "jest --clear-cache && rimraf ./coverage && rimraf ./dist",
    "debug": "run-s prebuild build:copy start:debug",
    "fixpack": "fixpack",
    "format": "run-s format:prettier format:eslint",
    "format:prettier": "prettier --ignore-path .prettierignore --write \"**/*.*\"",
    "format:eslint": "eslint --fix -c .eslintrc.js ./src/**/*.ts",
    "lint": "eslint -c .eslintrc.js ./src/**/*.ts",
    "postinstall": "node scripts/postinstall.js",
    "prebuild": "rimraf dist",
    "release": "run-s clear-autogen-files lint test:ci build",
    "start": "run-s prebuild build:copy start:dev",
    "start:debug": "nest start --debug --watch | bunyan",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main.js",
    "test": "jest --colors --watchAll --no-cache",
    "test:ci": "jest --no-colors --runInBand --ci --detectOpenHandles --no-cache",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --no-cache --config ./test/jest.e2e-config.js --runInBand --detectOpenHandles"
  },
  "dependencies": {
    "@nestjs/common": "^6.7.2",
    "@nestjs/core": "^6.7.2",
    "@nestjs/microservices": "^6.8.5",
    "@nestjs/platform-express": "^6.7.2",
    "ajv": "^6.10.2",
    "aws-sdk": "^2.596.0",
    "bunyan": "^1.8.12",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "ftp": "^0.3.10",
    "jszip": "^3.2.2",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "mqtt": "^3.0.0",
    "pg": "^7.12.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.3",
    "unzip-stream": "^0.3.0",
    "uuid": "^3.4.0",
    "yaml": "^1.7.2"
  },
  "devDependencies": {
    "@angular/compiler": "^9.1.0",
    "@angular/core": "^9.1.0",
    "@nestjs/cli": "^6.14.2",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.7.1",
    "@openapitools/openapi-generator-cli": "^1.0.2-4.2.0",
    "@types/bunyan": "^1.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/ftp": "^0.3.30",
    "@types/jest": "^24.0.18",
    "@types/jszip": "^3.1.6",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.7.5",
    "@types/pg": "^7.11.2",
    "@types/rimraf": "^2.0.3",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.6",
    "@types/yaml": "^1.2.0",
    "@types/yargs": "^15.0.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "asyncapi-generator": "^0.23.0",
    "codelyzer": "^5.2.2",
    "cpx": "^1.5.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-nestjs": "^1.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "fixpack": "^3.0.6",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "jest-junit": "^8.0.0",
    "lint-staged": "^10.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "rxjs-marbles": "^5.0.3",
    "shelljs": "^0.8.3",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.6.3",
    "yargs": "^15.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --no-stash"
    }
  }
}
